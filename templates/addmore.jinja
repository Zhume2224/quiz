{% extends 'base.jinja' %}



{% block content %}

<h1>Add a new user</h1>
<form action="/addmore/add_user" method="post">
 <label for="user">Add a user: </label>
<input type="text" name="user_name" placeholder="user name" required>
<input type="hidden" name="user_score" value='0'>
<input type="submit" value="submit">
</form>


<h1>Delete a user</h1>
<p>Use this function wisely</p>
<form action="/addmore/delete_user" method="post">
  <label for="user">Select a user: </label>
  <select name="user_id" required>
    {% for user in users %}
      <option value="{{user.id }}">{{ user.name }}</option>
    {% endfor %}
  </select>
  <input type="submit" value="Delete">
</form>



<h1>Add More Questions</h1>
<form action="/addmore/add_quizzes" method="post">
 <label for="quiz">Question: </label>
<input type="text" name="quiz" placeholder="add a question" required><br>
<label for="opt1">Option A: </label>
<input type="" name="opt1" required><br>
<label for="opt2">Option B: </label>
<input type="" name="opt2" required><br>
<label for="opt3">Option C: </label>
<input type="" name="opt3" required><br>
<label for="correct_answer">Correct Answer: </label>
<input type="" name="correct_answer" required><br>
<label for="level">Difficulty Level</label>
<small>(Difficulty increases with number): </small>
<input type="number" name="level" min="1" max="3" required><br>
<label for="admin_name">Your Name: </label>
<select name="admin_id" required><br>
    {% for user in users %}
      <option value="{{user.id }}">{{ user.name }}</option>
    {% endfor %}
    </select>
<input type="submit" value="submit">
</form>



{% endblock %}
